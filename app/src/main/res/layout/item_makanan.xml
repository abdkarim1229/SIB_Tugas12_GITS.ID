<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_item"
    android:padding="10dp">


    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/img_makanan"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/img_rendang" />

    <TextView
        android:id="@+id/nama_makanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_makanan"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Nama Makanan"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/harga_makanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_makanan"
        android:fontFamily="@font/poppins_semibold"
        android:text="Rp. "
        android:textColor="#FF7D7E"
        android:textSize="12sp" />

</RelativeLayout>